section.window-content {
  @apply bg-white;
}
input[type="text"], input[type="number"], input[type="password"], input[type="date"], input[type="time"], select, textarea { 
  @appy focus:shadow-none focus:outline-none;
}
input, select, textarea {
  @apply bg-white rounded-none placeholder-gray-500 focus:shadow-none;
}
:-moz-focusring {
  @apply outline-none;
}
a:hover {
  text-shadow: unset;
}
.tabs .item {
  @apply transition-text-shadow text-shadow text-shadow-transparent hover:text-shadow-gray-600;
}
.tabs .item.active {
  @apply text-shadow-gray-600;
}
div.editor .editor-content{
  min-height: 100px;
  resize: vertical;
}
.window-app.swnr {
  @tailwind components;

  @tailwind utilities;
}
.dieRoll {
  list-style-type: none;
  margin: 0px;
  .die {
    display: inline;
  }
  padding: 0px;
  .die.flop {
    text-decoration: line-through #00000098;
    color: slategrey;
  }
  .die.good {
    color: green;
  }
  .die.bad {
    color: red;
  } 
}
.hpRoll {
  .status {
    div {
      display: inline;
    }
  }
}
